<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Timestamp of the recorded data -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <!-- Heart rate display -->
        <TextView
            android:id="@+id/tvHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate: -- bpm"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <!-- Respiratory rate display -->
        <TextView
            android:id="@+id/tvRespRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respiratory Rate: -- bpm"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Divider between vitals and symptoms -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="8dp"/>

        <!-- Display recorded symptoms -->
        <TextView
            android:id="@+id/tvSymptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

